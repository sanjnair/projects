<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lesson_res_recycler_item_layout"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/activity_vertical_margin"
        >

        <ImageView
            android:id="@+id/lesson_res_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/lesson_res_thumbnail_max_width"
            android:layout_height="@dimen/lesson_res_thumbnail_max_height"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_lesson"
            android:contentDescription="@string/desc_lesson_res_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_res_desc"
            android:layout_toEndOf="@+id/lesson_res_image"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/lesson_res_text_size"
            android:textColor="@color/primary_text"
            android:contentDescription="@string/desc_lesson_res_description"
            />

    </RelativeLayout>

</LinearLayout>
