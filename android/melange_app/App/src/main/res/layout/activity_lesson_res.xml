<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xmatrix.melange.LessonResActivity">

    <TextView
        android:id="@+id/lesson_res_notificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_lessons_found"
        android:visibility="invisible"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:contentDescription="@string/desc_lesson_res_notification"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lesson_res_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
