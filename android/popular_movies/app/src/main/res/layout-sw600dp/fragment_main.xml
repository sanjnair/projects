<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/no_movies_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detail_title_color"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/detail_title"
            style="@style/style_nomovies_title"
            android:layout_width="wrap_content"
            android:text="@string/no_movies"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_small_margin"
            />
    </LinearLayout>

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_grid_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_weight="2"
        />

    <FrameLayout
        android:id="@+id/movie_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

</LinearLayout>
